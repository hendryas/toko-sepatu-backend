<!-- Start Header -->
<%- include('../templates/headeradmin.ejs') %>
<!-- End Header -->

<!-- Start Loader -->
<%- include('../templates/loader.ejs') %>
<!-- End Loader -->

<!-- Start Navigation Bar-->
<header id="topnav">
    <!-- Start Topbar-main -->
    <%- include('../templates/topbaradmin.ejs') %>
    <!-- End Topbar-main -->

    <!-- Start Navbar -->
    <%- include('../templates/navbaradmin.ejs') %>
    <!-- End Navbar -->
</header>
<!-- End Navigation Bar-->

<!-- Start Wrapper -->
<div class="wrapper">
    <div class="container-fluid">

        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="btn-group float-right">
                        <ol class="breadcrumb hide-phone p-0 m-0">
                            <li class="breadcrumb-item"><a href="#"></a>Master</li>
                            <li class="breadcrumb-item active">Category</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Data Master Category</h4>
                </div>
            </div>
        </div>
        <!-- end page title end breadcrumb -->

        <div class="row">
            <!--====START CONTENT HERE =====-->
            <div class="col-lg-12">
                <div class="card m-b-30">
                    <div class="card-body">

                        <h4 class="mt-0 header-title">Halaman data category</h4>
                        <p class="text-muted m-b-30 font-14">
                            Pada halaman ini anda dapat menambahkan data, mengedit data, dan menghapus data category.
                        </p>

                        <a href="#" class="btn btn-primary waves-effect waves-light mb-3" data-toggle="modal"
                            data-target="#newTambahCategory">Tambah Data Category</a>

                        <div class="table-responsive">
                            <table id="datatable" class="table table-bordered dt-responsive nowrap"
                                style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead class="text-center">
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                    <% no = 1 %>

                                    <% dataCategory.forEach(category => { %>
                                    <tr class="text-center">
                                        <th scope="row"><%= no %></th>
                                        <td><%= category.name %></td>
                                        <td>
                                            <a href="#"><span class="badge badge-success" data-toggle="modal"
                                                    data-target="#editCategory<%= category.id %>">Edit</span></a>
                                            <a href="/api/categories/delete/<%= category.id %>"><span
                                                    class="badge badge-danger ml-3">Delete</span></a>
                                        </td>
                                    </tr>
                                    <%no++ %>
                                    <% })%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!--====END CONTENT HERE =====-->
        </div>
        <!-- end row -->
    </div> <!-- end container -->
</div>
<!-- End Wrapper -->

<!-- Start Tambah Category -->
<div class="modal fade" id="newTambahCategory" tabindex="-1" aria-labelledby="newTambahCategoryLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newTambahCategoryLabel">Tambah Category Baru</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/api/categories/add" method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Nama Category</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Input Nama Category"
                            autocomplete="off" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Tambah</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- End Tambah Category -->

<!-- Start Edit Category -->
<% dataCategory.forEach(category => { %>
<div class="modal fade" id="editCategory<%= category.id %>" tabindex="-1" aria-labelledby="editCategoryLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editCategoryLabel">Edit Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/api/categories/edit/<%= category.id %>" method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Nama Category</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Input Nama Category"
                            autocomplete="off" required value="<%= category.name %> ">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% })%>
<!-- End Edit Category -->

